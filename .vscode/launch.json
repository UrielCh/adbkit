    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mocha Tests",
            "cwd": "${workspaceFolder}",
            "args": [
                "-r",
                "ts-node/register",
                "--project",
                "tsconfig.json",
                "--no-timeouts",
                "--colors",
                "${workspaceFolder}/test/**/*.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Mocha Tests parser",
            "cwd": "${workspaceFolder}",
            "args": [
                "-r",
                "ts-node/register",
                "--project",
                "tsconfig.json",
                "--no-timeouts",
                "--colors",
                "${workspaceFolder}/test/adb/parser.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },

        {
            "name": "Mocha Tests host-transport",
            "cwd": "${workspaceFolder}",
            "args": [
                "-r",
                "ts-node/register",
                "--project",
                "tsconfig.json",
                "--no-timeouts",
                "--colors",
                "${workspaceFolder}/test/adb/command/host-transport/*.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },

        {
            "name": "Mocha Tests adb",
            "cwd": "${workspaceFolder}",
            "args": [
                "-r",
                "ts-node/register",
                "--project",
                "tsconfig.json",
                "--no-timeouts",
                "--colors",
                "${workspaceFolder}/test/adb/tr*.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }


    ]
}