{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "name": "realTest",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--trace-warnings", "--unhandled-rejections", "warn", "--trace-sync-io", "--nolazy", "-r", "ts-node/register"],
            "args": ["./tasks/realTest.ts", "--transpile-only"],
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            // "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig-cjs.json",
                "DEBUG": "adb:minicap, adb:scrcpy",
                "DEBUG_COLORS": "1"
            }
        },
        {
            "name": "Mocha Tests",
            "cwd": "${workspaceFolder}",
            "args": [
                "--no-timeouts",
                "--colors",
                "${workspaceFolder}/test/**/*.ts"
            ],
            "env": {
                // "NODE_OPTIONS": "--loader ts-node/esm",
                "NODE_OPTIONS": "-r ts-node/register --no-warnings",
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig-cjs.json",
            },
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Mocha Tests serviceCall",
            "cwd": "${workspaceFolder}",
            "args": [
                "-r",
                "ts-node/register",
                "--project",
                "tsconfig-cjs.json",
                "--no-timeouts",
                "--colors",
                "${workspaceFolder}/test/adb/command/host-transport/serviceCall.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

    ]
}
